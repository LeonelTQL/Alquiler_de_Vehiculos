@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<h1>Dashboard</h1>

<h2>Bienvenido, Administrador</h2>
<!-- Carrusel de imágenes -->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 4"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 5"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 6"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 7"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/img/jeep-negro.webp" class="d-block w-100" alt="Vehículo 1" width="500" height="500"/>
        </div>
        <div class="carousel-item">
            <img src="/img/jeep-rojo.jpeg" class="d-block w-100" alt="Vehículo 2" width="500" height="500" />
        </div>
        <div class="carousel-item">
            <img src="/img/jeep-verde.jpg" class="d-block w-100" alt="Vehículo 3" width="500" height="500">
        </div>
        <div class="carousel-item">
            <img src="/img/Jeep_amarillo.jpg" class="d-block w-100" alt="Vehículo 4" width="500" height="500">
        </div>
        <div class="carousel-item">
            <img src="/img/alquiler-autored.jpg" class="d-block w-100" alt="Vehículo 5" width="500" height="500">
        </div>
        <div class="carousel-item">
            <img src="/img/sail.png" class="d-block w-100" alt="Vehículo 6" width="500" height="5000">
        </div>
        <div class="carousel-item">
            <img src="/img/logan.png" class="d-block w-100" alt="Vehículo 7" width="5000" height="5000">
        </div>
        <div class="carousel-item">
            <img src="/img/1renault_duster_full_1.6.webp" class="d-block w-100" alt="Vehículo 3" width="7000" height="5000">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Cards de vehículos disponibles -->
