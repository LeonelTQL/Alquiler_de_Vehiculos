
@{
    ViewData["Title"] = "Index";
}

<h1>Empleados</h1>

<script src="~/js/empleados.js"></script>
<script src="~/js/generic.js"></script>



<form id="frmBusquedaEmpleados" method="post">
    <div class="input-group mb-3">
        <input type="text" class="form-control" onkeyup="buscarEmpleados()" placeholder="Buscar por nombre, modelo..." aria-label="Buscar" aria-describedby="button-addon2" id="txtTerminoBusqueda" name="terminoBusqueda">
        <button class="btn btn-danger" onclick="limpiarEmpleados('frmBusquedaEmpleados')" type="button" id="button-addon2">limpiar</button>
    </div>
</form>

<form id="frmGuardarEmpleados" method="post">
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control" id="txtnombre" name="nombre">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="apellido">Apellido:</label>
                        <input type="text" class="form-control" id="txtapellido" name="apellido">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="cargo">Cargo:</label>
                        <input type="text" class="form-control" id="txtcargo" name="cargo">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="telefono">Telefono:</label>
                        <input type="text" class="form-control" id="txttelefono" name="telefono">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="text" class="form-control" id="txtemail" name="email">
                    </div>
                </div>
                <div class="row g-3">
                    <div class="gap-2">
                        <button type="button" onclick="guardarEmpleados()" class="btn btn-primary">
                            Guardar
                        </button>
                        <button type="button" onclick="limpiarEmpleados('frmGuardarEmpleados')" class="btn btn-danger">
                            Limpiar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Empleados</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmEditarEmpleados" method="post">
                    <input type="hidden" class="form-control" id="txtidempleadoModal" name="idEmpleado">
                    <div class="md-3">
                        <div class="form-group">
                            <label for="nombre">Nombre:</label>
                            <input type="text" class="form-control" id="txtnombreModal" name="nombre">
                        </div>
                    </div>
                    <div class="md-3">
                        <div class="form-group">
                            <label for="apellido">Apellido:</label>
                            <input type="text" class="form-control" id="txtapellidoModal" name="apellido">
                        </div>
                    </div>
                    <div class="md-3">
                        <div class="form-group">
                            <label for="cargo">Cargo:</label>
                            <input type="text" class="form-control" id="txtcargoModal" name="cargo">
                        </div>
                    </div>
                    <div class="md-3">
                        <div class="form-group">
                            <label for="telefono">Telefono:</label>
                            <input type="text" class="form-control" id="txttelefonoModal" name="telefono">
                        </div>
                    </div>
                    <div class="md-3">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="text" class="form-control" id="txtemailModal" name="email">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardarEdicion()">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>

<div id="divtabla"></div>
